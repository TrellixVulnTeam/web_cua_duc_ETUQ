<div class="m-4">
    <h1>DANH SÁCH SẢN PHẨM</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Thể loại</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>
                    <a href="/products/{{this.slug}}">
                        {{this.name}}
                    </a>
                   
                </td>
                <td>{{this.style}}</td>
                <td>
                    <a href="/products/{{this._id}}/edit">Sửa</a>
                </td>
                <td>
                    <a href="/products/:id/delete">Xóa</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>